<Window x:Class="Accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting"
        mc:Ignorable="d"
        Title="Accounting" Height="462" Width="800" MinHeight="462" MinWidth="800"
        Loaded="MainWindow_Loaded" Icon="/16_122653.ico">
    <Grid Background="#FFECECEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*"></ColumnDefinition>
                <ColumnDefinition Width="0.33*"></ColumnDefinition>
                <ColumnDefinition Width="0.33*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"></RowDefinition>
                <RowDefinition Height="0.35*"></RowDefinition>
                <RowDefinition Height="0.25*"></RowDefinition>
                <RowDefinition Height="0.15*"></RowDefinition>
            </Grid.RowDefinitions>

            <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                <MenuItem Header="File">
                    <MenuItem Header="Open the log" Click="Button_OpenTheLog_Click"></MenuItem>
                </MenuItem>
                <MenuItem Header="Backup">
                    <MenuItem Header="Change backup directory" Click="Button_ChangeBackupDirectory_Click"></MenuItem>
                    <MenuItem Header="Backup the base" Click="Button_BackupBase_Click" ></MenuItem>
                    <MenuItem Header="Backup the log" Click="Button_BackupLog_Click"></MenuItem>
                    <MenuItem Header="Apply the base backup" Click="Button_ApplyTheBaseBackup_Click"></MenuItem>
                    <MenuItem Header="Apply the log backup" Click="Button_ApplyTheLogBackup_Click"></MenuItem>
                </MenuItem>
            </Menu>


            <Label Grid.Column="0" Grid.Row="1" Content="Type" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <ComboBox Grid.Column="0" Grid.Row="2" Name="ComboBox_Type" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Width="176" SelectedItem="All" SelectionChanged="ComboBox_Type_SelectionChanged"/>

            <Label Grid.Column="1" Grid.Row="1" Content="Status" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <ComboBox Grid.Column="1" Grid.Row="2" Name="ComboBox_Status"  HorizontalAlignment="Center" VerticalAlignment="Center"
                      Width="176" SelectedItem="All" SelectionChanged="ComboBox_Status_SelectionChanged"/>

            <Label Grid.Column="2" Grid.Row="1" Content="Search" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBox Grid.Column="2" Grid.Row="2" Name="SearchTextBox" HorizontalAlignment="Center" VerticalAlignment="Center"
                     TextWrapping="Wrap" Text="" Width="176" TextChanged="SearchTextBox_TextChanged"/>
        </Grid>

        <Grid Grid.Row="1">
            <DataGrid Name="AccTable" IsReadOnly="True"  ColumnWidth="*"></DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.33*"></ColumnDefinition>
                <ColumnDefinition Width="0.33*"></ColumnDefinition>
                <ColumnDefinition Width="0.33*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"></RowDefinition>
                <RowDefinition Height="0.4*"></RowDefinition>
                <RowDefinition Height="0.3*"></RowDefinition>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="1" Content="Insert" Name="Button_Insert"
                    HorizontalAlignment="Center" Width="135" Click="Button_Insert_Click"/>

            <Button Grid.Column="1" Grid.Row="1" Content="Update" Name="Button_Update"
                    HorizontalAlignment="Center" Width="135" Click="Button_Update_Click"/>

            <Button Grid.Column="2" Grid.Row="1" Content="Delete" Name="Button_Delete" 
                    HorizontalAlignment="Center" Width="135" Click="Button_Delete_Click"/>
        </Grid>

    </Grid>
</Window>
