<Window x:Class="Accounting.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting"
        mc:Ignorable="d"
        Title="About" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" x:Name="AboutProgram" IsReadOnly="True"
                 BorderThickness="0" Margin="10" TextWrapping="Wrap"
                 VerticalAlignment="Center"></TextBox>

        <TextBox Grid.Row="1" x:Name="AboutAuthor" IsReadOnly="True" 
                 BorderThickness="0" Margin="20, 10" TextWrapping="Wrap"
                 VerticalAlignment="Center"></TextBox>

        <TextBox Grid.Row="2" x:Name="AboutGithub" IsReadOnly="True" 
                 BorderThickness="0" Margin="20, 10" TextWrapping="Wrap"
                 VerticalAlignment="Center"></TextBox>
    </Grid>
</Window>
